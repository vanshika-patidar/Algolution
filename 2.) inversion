//given an integer array[] of size n, the task is to find the count inversion of the given array.
//two array elements arr[i] and arr[j] form an inversion if arr[i]>arr[j] and i<j.
//input: arr[] = {7,2,6,3}
//output: 4
//explanation: given array has 4 inversion: (7,2) (7,6) (7,3) (6,3)

#include<iostream>
using namespace std;
int main()
{
    int arr[4] = {7,2,6,3};
    for(int i=0;i<4;i++)
    {
        for(int j=0;j<4;j++)
        {
            if(arr[i]>arr[j] and i<j)
            {
                cout<<"("<<arr[i]<<" "<<arr[j]<<")";
                cout<<endl;
                
            }
        }
    }
    return 0;
}
